{
    "app-id" : "de.haeckerfelix.gradio",
    "runtime" : "org.gnome.Sdk",
    "runtime-version" : "3.28",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "gradio",
    "finish-args" : [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--filesystem=xdg-run/dconf",
        "--filesystem=host",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--own-name=org.mpris.MediaPlayer2.gradio"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ],
        "env" : {
            "DEBUG" : "true",
            "CARGO_HOME" : "./.cargo",
            "RUST_LOG" : "rustio,gradio=debug",
            "RUST_BACKTRACE" : "1",
            "RUSTFLAGS" : "-Awarnings"
        }
    },
    "modules" : [
        {
            "name" : "libhandy",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://source.puri.sm/Librem5/libhandy.git"
                }
            ]
        },
        {
            "name" : "gradio",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/haecker-felix/Gradio.git",
                    "branch" : "rust-port"
                }
            ]
        }
    ]
}
